<SignInScreen>:
    BoxLayout:
        orientation: 'vertical'
        padding: 10


        Label:
            text: 'Вход'
            font_size: 50
            size_hint: (1, .3)
            color: .28, .28, .28


        GridLayout:
            cols: 2
            spacing: 20
            padding: 30


            Label:

                text: "Логин"
                font_size: 40
                color: .28, .28, .28

            TextInput:
                id: log
                background_color: .85, .85, .85
                font_size: 30
                cursor_color: .28, .28, .28

            Label:
                text: "Пароль"
                font_size: 40
                color: .28, .28, .28

            TextInput:
                id: passwd
                background_color: .85, .85, .85
                font_size: 30
                cursor_color: .28, .28, .28

        AnchorLayout:
            anchor_x : 'right'
            anchor_y : 'top'
            padding: 20

            Button:
                text: 'Войти'
                font_size: 40
                size_hint: (0.48, 0.4)
                background_normal: ''
                color: .28, .28, .28
                background_color: .97, .95, .48
                on_press:
                    root.authorization(log.text, passwd.text)
                    root.manager.current = 'dract'



